pragma solidity ^0.8.19;

contract Arithmetic {
    // Function to check if a number is odd
    function is_odd(uint256 number) public pure returns (bool) {
        return number % 2 != 0;
    }

    // Function to check if a number is even
    function is_even(uint256 number) public pure returns (bool) {
        return number % 2 == 0;
    }

    // Function to find the most significant bit of a number
    function most_significant_bit(uint256 number) public pure returns (uint256) {
        uint256 msb = 0;
        while (number > 0) {
            msb = number;
            number >>= 1;
        }
        return msb;
    }
}
